<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:weightSum="300"
    tools:context="com.example.shani.qarifinder.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_weight="100"
        android:weightSum="200">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="115"
            >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/images"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="85">

            <TextView
                android:id="@+id/qariFinder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qari Finder"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:orientation="vertical">
        <EditText
            android:id="@+id/editText_email"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="100"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/emaillogo"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="100"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/emaillogo"
            android:drawableRight="@drawable/emaillogo"
            android:drawablePadding="10dp"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/textView_forgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:layout_gravity="right"
            android:textSize="15dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:weightSum="100"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Login"
            android:background="@drawable/shape"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="100"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_createAcount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Create an account"
            android:layout_gravity="bottom"
            android:textSize="20dp"
            />
           </LinearLayout>


    </LinearLayout>
</LinearLayout>
